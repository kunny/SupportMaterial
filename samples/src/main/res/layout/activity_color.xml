<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.androidhuman.supportmaterial.sample.ColorActivity">

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_red_300"
            android:gravity="center"
            android:text="@string/degree_300"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_red_500"
            android:gravity="center"
            android:text="@string/degree_500"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_red_700"
            android:gravity="center"
            android:text="@string/degree_700"/>

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/indigo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_indigo_300"
            android:gravity="center"
            android:text="@string/degree_300"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_indigo_500"
            android:gravity="center"
            android:text="@string/degree_500"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_indigo_700"
            android:gravity="center"
            android:text="@string/degree_700"/>

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_teal_300"
            android:gravity="center"
            android:text="@string/degree_300"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_teal_500"
            android:gravity="center"
            android:text="@string/degree_500"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_teal_700"
            android:gravity="center"
            android:text="@string/degree_700"/>

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orange"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_orange_300"
            android:gravity="center"
            android:text="@string/degree_300"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_orange_500"
            android:gravity="center"
            android:text="@string/degree_500"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_orange_700"
            android:gravity="center"
            android:text="@string/degree_700"/>

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_grey_300"
            android:gravity="center"
            android:text="@string/degree_300"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_grey_500"
            android:gravity="center"
            android:text="@string/degree_500"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mtrl_grey_700"
            android:gravity="center"
            android:text="@string/degree_700"/>

    </LinearLayout>

</ScrollView>
