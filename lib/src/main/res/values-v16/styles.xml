<resources>
    <style name="MaterialTextAppearance">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MaterialTextAppearance.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialTextAppearance.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialTextAppearance.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialTextAppearance.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MaterialTextAppearance.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MaterialTextAppearance.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialTextAppearance.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialTextAppearance.Display1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="MaterialTextAppearance.Display2">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="MaterialTextAppearance.Display3">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="MaterialTextAppearance.Display4">
        <item name="android:fontFamily">112sp</item>
        <item name="android:textSize">112sp</item>
    </style>
</resources>